@model IEnumerable<AirlinesReservationSystem.Models.Aircraft>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AircraftName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstClassSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BussinessSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EconomySeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Range)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceFee)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AircraftName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstClassSeats)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BussinessSeats)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EconomySeats)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Range)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceFee)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AircraftID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AircraftID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AircraftID })
        </td>
    </tr>
}

</table>
