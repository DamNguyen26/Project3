<body>
    <!--start of navbar-->
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-ars">
        <div class="container">
            <a href="/ars/Index" class="navbar-brand">
                <img src="~/img/ars/Logo.png" alt="ARS" class="d-inline-block align-top img-fluid" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a href="/ars/paymentsearch" class="nav-link" style="color:white">Payment Search</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        @if (Session["user"] == null)
                        {
                            @Html.ActionLink("Login", "Login", "ARS", new { @class = "nav-link", Style="color: white" })
                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle waves-effect waves-light" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" Style="color: white">Welcome!<b>@(Session["user"])</b></a>
                            <div class="dropdown-menu dropdown-info" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item waves-effect waves-light" href="@Url.Action("ProfileUser","ARS")" Style="background-color: #2143A3; color: white">Profile</a>
                                <a class="dropdown-item waves-effect waves-light" href="@Url.Action("Logout","ARS")" Style="background-color: #2143A3; color: white">Logout</a>
                            </div>
                            

                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <p></p>
        @RenderBody()
    </div>
    <footer class="bg-ars-light">
        <div class="container-fluid">
            <div class="col-md-12 my-md-3">&nbsp;</div>
            <div class="col-md-12 my-md-3 row">
                <div class="col-md-4 text-md-center">
                    <img src="~/img/ars/Logo.png" alt="ARS" class="d-inline-block align-top img-fluid" /> <br />
                    <p class="my-md-5" style="color:white">
                        Hotline: <br />
                        +84 903 476 171
                    </p>
                </div>
                <div class="col-md-2" style="color:white">
                    <ul class="list-unstyled">
                        <li><h5>About</h5></li>
                        <li><a href="#" class="footer-link" style="color:white">Contact Us</a></li>
                        <li><a href="#" class="footer-link" style="color:white">Support</a></li>
                        <li><a href="#" class="footer-link" style="color:white">About Us</a></li>
                    </ul>
                    
                </div>
                <div class="col-md-2" style="color:white">
                    <ul class="list-unstyled">
                        <li><h5>Our story</h5></li>
                        <li><a href="#" class="footer-link" style="color:white">Flights</a></li>
                        <li><a href="#" class="footer-link" style="color:white">Aiports</a></li>
                        <li><a href="#" class="footer-link" style="color:white">Airlines</a></li>
                    </ul>
                </div>
               
            </div>
            <div class="text-md-center col-md-12">
                <p style="color:white">
                    &copy; @DateTime.Now.Year Airline Reservation System - Aptech Aprotrain Le Thanh Nghi - Group 1<br />
                </p>
            </div>
        </div>
    </footer>
    <button onclick="topFunction()" id="scrollBtn" title="Go to top">&uarr;</button>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/ars/layout.js"></script>
</body>
</html>