@model AirlinesReservationSystem.Models.Country

@{
    ViewBag.Title = "CountryAdd";
}
<link href="~/Content/select2.min.css" rel="stylesheet" />
<link href="~/Content/arsAdmin/flightAdd.css" rel="stylesheet" />
<script src="~/Scripts/select2.full.min.js"></script>
<h2>Country - Add new Country <a href="/arsadmin/country" class="btn btn-warning">Back to list</a></h2>
<div class="col-md-12">&nbsp;</div>


@using (Html.BeginForm("CountryAdd", "ARSAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group form-inline">
            <label class="control-label col-md-2" style="text-align:right">Country ID </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CountryID, new { htmlAttributes = new { @class = "form-control", style = "width:100%", maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.CountryID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group form-inline">
            <label class="control-label col-md-2" style="text-align:right">Country Name </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control", style = "width:100%", maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group form-inline">
            <label class="control-label col-md-2" style="text-align:right">Country Flag </label>
            <div class="col-md-10">
                <input type="file" name="ImageFile" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-lg btn-info" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

